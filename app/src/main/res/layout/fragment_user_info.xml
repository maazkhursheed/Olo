                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>

        <EditText
                android:id="@+id/edittxt_userphone"
                android:layout_width="match_parent" android:layout_height="wrap_content"

                android:layout_weight="0.5"
